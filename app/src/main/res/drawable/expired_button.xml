<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#c9c9c9" />
            <gradient android:angle="-90" android:startColor="#b0b0b0" android:endColor="#474747"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#bebebe" />
            <solid android:color="#a9a9a9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#777777" />
            <gradient android:angle="-90" android:startColor="#878787" android:endColor="#a4a4a4" />
        </shape>
    </item>
</selector>
